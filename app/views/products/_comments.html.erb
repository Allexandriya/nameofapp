<div class="col-sm-7">
<h2 style="margin-top: 0px;">Comments</h2>
<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row">

            <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <p><b><%= comment.product.name %></b><div class="rated" data-score="<%= comment.rating %>"></div></p>

            <p><%= comment.body %></p>
            <hr>
        </div>
    <% end %>
</div>
<%= will_paginate @comments %>
</div>