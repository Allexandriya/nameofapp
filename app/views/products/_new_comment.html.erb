  <div class="col-sm-5">
    <% if signed_in? %>
      <h4>Add a review:</h4>
      <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
        <p>
          <%= f.label :body, "Comment" %><br>
          <%= f.text_area :body, class: "form-control", style: "min-height: 130px"%>
        </p>
        <p>
          <div class="rating"></div>
        </p>  
        <p>
          <%= f.submit "Submit", class: "btn pull-right" %>
        </p>
      <% end %>
    <% end %>
  </div>
