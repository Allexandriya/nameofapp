<div class="row">
  <div class="col-sm-6">
    <% if signed_in? %>
      <h4>Add a review:</h4>
      <%= form_for([@product, @product.comments.build]) do |f| %>
        <p>
          <%= f.label :body, "Comment" %><br>
          <%= f.text_area :body, class: "form-control"  %>
        </p>
        <p>
          <%= f.label :rating %><br>
          <%= f.text_field :rating, class: "rating form-control" %>
        </p>  
        <p>
          <%= f.submit "Submit", class: "btn" %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>